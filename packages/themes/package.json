{
  "name": "@mch-group/uikit-themes",
  "description": "MCH UI Themes",
  "version": "0.4.0",
  "bugs": "https://bitbucket.org/mchappsrvcs/artbasel-ui-kit/issues",
  "repository": {
    "type": "git",
    "url": "https://bitbucket.org/mchappsrvcs/artbasel-ui-kit.git",
    "directory": "packages/themes"
  },
  "homepage": "https://bitbucket.org/mchappsrvcs/artbasel-ui-kit",
  "keywords": [
    "sass",
    "css",
    "bootstrap",
    "themes"
  ],
  "license": "ISC",
  "author": "DMI",
  "publishConfig": {
    "access": "restricted"
  },
  "files": [
    "dist/**/*.{css,scss,map}",
    "bootstrap/**/*.scss"
  ],
  "engines": {
    "node": ">= 14.0.0"
  },
  "scripts": {
    "build": "npm run css-compile && yarn copy-sass-vars",
    "clean": "rm -rf dist",
    "css-compile": "node-sass --include-path node_modules --output-style compressed --precision 6 bootstrap -o dist/ ",
    "watch": "nodemon -e scss -x \"yarn run css-compile\"",
    "test": "yarn run css-compile",
    "copy-sass-vars": "mkdir -p dist/artbasel/scss && cp bootstrap/artbasel/variables/_colors.scss dist/artbasel/scss/colors.scss"
  },
  "devDependencies": {
    "bootstrap": "^5.1.3",
    "node-sass": "^6.0.1",
    "nodemon": "^2.0.13"
  }
}
